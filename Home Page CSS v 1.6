<!--Title of File: "SP Website css" -->

body {
  background-image: url('https://i.imgur.com/OKT0OgW.png');
  background-size: 100% auto;
  background-color: rgb(27, 27, 53);
  background-repeat: no-repeat;
}

h1 {
  text-align: right;
  font-size: 100px;
  margin-right: 10%;
  margin-top: 10%;
  color: rgb(254, 255, 240);
  font-weight: bold;
}

#SmartInfo{
  font-size: 25px;
  text-align: right;
  margin-right: 10%;
  color: rgb(254, 255, 240);
}

h2 {
  text-align: right;
  font-size: 70px;
  margin-right: 10%;
  color: rgb(254, 255, 240);
}

#TakeMe {
  float: right;
  margin-right: 20%;
  margin-top: 3%;
  background-color: transparent;
  color: rgb(254, 255, 240);
  font-size: 30px;
  transition-duration: 0.5s;
}

#TakeMe:hover {
  transform: scale(1.2);
  background-color: pink;
  transition-duration: 0.5s;
}

.navbar {
    margin-bottom: 0;
    border-radius: 0;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    background-color: rgb(22, 24, 53);
}
  
.row.content {height: 450px}

@media screen and (max-width: 767px) {
    .sidenav {
      height: auto;
      padding: 15px;
    }
    .row.content {height:auto;} 
    
}

.AboutUs:hover {
    color:rgb(212, 234, 241);
}

.AboutUS { 
    font-size: 30px; 
    align-items: center;
    color: darkslategrey;
}


.Why:hover {
color:rgb(212, 234, 241);
}

.Why {
    font-size: 30px;
    color: darkslategrey;
}


.How:hover {
    color:rgb(212, 234, 241);
}

.How { 
    font-size: 30px;
    align-items: center;
    color: darkslategrey;
}


.p1 {
  text-align: center;
  text-decoration: underline;
  text-transform: uppercase; 
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 30px;
  color: darkslategrey;
  margin-top: 25px;
}

#go {
  display: flex;
  align-items: center; 
    
  margin-top: 20px;
  margin-bottom: 20px;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  font-size: 20px;
}

.Go {
  background-color: lightcyan;
  color: darkslategrey;
  outline: 6px solid white;
}
