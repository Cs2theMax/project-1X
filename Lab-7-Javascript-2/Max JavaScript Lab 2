<body>

    <button id="changeTextBtn"> Change Text Here </button>
   
    <p id="displayText"> 
        This is the changeable text, click the button above to change.
    </p>

    <script>
        var changeTextBtn = document.getElementById("changeTextBtn");

        var displayText = document.getElementById("displayText");
        
        changeTextBtn.addEventListener("click", function() {
            changeText();
        })
        function changeText() {
            displayText.textContent = "Hello, JavaScript World!";
        }
    </script>    

</body>
